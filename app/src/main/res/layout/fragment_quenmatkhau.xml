<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:background="@color/colorThanhDangNhap"
        android:gravity="center"
        android:text="Quên mật khẩu"
        android:textColor="@color/colorWhite"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextQuenMatKhauTaiKhoan"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Tài khoản"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/editTextQuenMatKhauNaminh"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="Năm sinh"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editTextQuenMatKhauGioiTinh"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="Giới tính"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonQuenMatKhauLayMK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Lấy lại mật khẩu"
        android:textAllCaps="false"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/buttonQuayLaia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Quay lại"
        android:textAllCaps="false"
        android:textSize="20sp"/>

</LinearLayout>